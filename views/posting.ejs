<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title>My Feed</title>
</head>
<body>
    <div class="sidebar">
        <h2>Healro</h2>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/profile/<%= user.id %>">Profile</a></li>
                <li><a href="/activities">Activities</a></li>
                <li><a href="/contents">Contents</a></li>
                <li><a href="/posting">My Feed</a></li>
                <li><a href="/communities">Communities</a></li>
            </ul>
        </nav>
    </div>
    <div class="main-content">
        <header>
            <h1>Healro</h1>
            <nav>
                <ul>
                    <li><form action="/logout" method="post" style="display:inline;"><button type="submit">Log Off</button></form></li>
                </ul>
            </nav>
        </header>
        <section class="today-topic">
            <h2>My Feed</h2>
            <p>Subheading that can use content, share more info about the platform, or generally gets people engaged to keep reading.</p>
            <form action="/posting" method="POST">
                <div class="posts-creation">
                    <div>
                        <label for="title">Title:</label>
                        <input type="text" id="title" name="title" required>
                    </div>
                    <div>
                        <label for="body">Body:</label>
                        <textarea id="body" name="body" rows="5" required></textarea>
                    </div>
                    <div>
                        <button type="submit">Post</button>
                    </div>
                </div>
            </form>
            <div class="content-area">
                <div class="posts-grid">
                    <% if (posts.length > 0) { %>
                        <% posts.forEach(post => { %>
                            <div class="post">
                                <img src="/images/post1.jpg" alt="Post Image">
                                <div class="post-meta">
                                    <p><strong><%= post.username %></strong> | <%= new Date(post.published_at).toLocaleString() %></p>
                                </div>
                                <h2><%= post.title %></h2>
                                <p><%= post.content %> #topic</p>
                                <div class="post-actions">
                                    <form action="/post/<%= post.post_id %>/like" method="POST" style="display:inline;">
                                        <button type="submit" class="like-button">Like</button>
                                    </form>
                                    <p class="likes-count">Likes: <%= post.likes %></p>
                                </div>
                                <div class="comments">
                                    <h3>Comments</h3>
                                    <% comments.filter(comment => comment.post_id === post.post_id).forEach(comment => { %>
                                        <p><strong><%= comment.commenter_name %></strong> | <%= new Date(comment.comment_date).toLocaleString() %></p>
                                        <p><%= comment.comment_text %></p>
                                    <% }) %>
                                    <form action="/post/<%= post.post_id %>/comment" method="POST">
                                        <textarea name="comment_text" rows="3" placeholder="Write your comment..." required></textarea>
                                        <button type="submit" class="comment-button">Comment</button>
                                    </form>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <p>No published posts found.</p>
                    <% } %>
                </div>
                <!-- <div class="recommended-communities">
                    <h3>Recommended Communities</h3>
                    <ul>
                        <li><a href="#">Community 1</a><button>Join</button></li>
                        <li><a href="#">Community 2</a><button>Join</button></li>
                        <li><a href="#">Community 3</a><button>Join</button></li>
                        <li><a href="#">Community 4</a><button>Join</button></li>
                        <li><a href="#">Community 5</a><button>Join</button></li>
                        <li><a href="#">Community 6</a><button>Join</button></li>
                    </ul>
                </div> -->
            </div>
        </section>
    </div>
    <footer>
        <p>&copy; 2024 Healro. All rights reserved.</p>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
          document.querySelectorAll('.like-button').forEach(button => {
            button.addEventListener('click', () => {
              const postId = button.getAttribute('data-post-id');
      
              fetch(`/post/${postId}/like`, {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json'
                },
                credentials: 'same-origin' // Include cookies for session management
              })
              .then(response => response.json())
              .then(data => {
                alert(data.message); // Show a simple alert or you can customize this
                if (data.likes !== undefined) {
                  // Update the like count
                  const likeCount = button.nextElementSibling;
                  likeCount.textContent = `${data.likes} Likes`;
                }
              })
              .catch(error => {
                console.error('Error:', error);
              });
            });
          });
        });
      </script>
</body>
</html>
