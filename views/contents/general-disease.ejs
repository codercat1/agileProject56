<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title>General Disease</title>
</head>
<body>
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <h2>Healro</h2>
            <div class="hamburger" id="hamburger">
                &#9776;
            </div>
        </div>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/profile/<%= user.id %>">Profile</a></li>
                <li><a href="/activities">Activities</a></li>
                <li><a href="/contents">Contents</a></li>
                <li><a href="/posting">My Feed</a></li>
                <li><a href="/communities">Communities</a></li>
            </ul>
        </nav>
    </div>
    <div class="main-content">
        <header>
            <h1>General Disease</h1>
            <nav>
                <ul>
                    <li><form action="/logout" method="post" style="display:inline;"><button type="submit">Log Off</button></form></li>
                </ul>
            </nav>
        </header>
        <section class="table-container">
            <h2>Articles</h2>
            <table>
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Published Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (articles.length > 0) { %>
                        <% articles.forEach(article => { %>
                            <tr>
                                <td><a href="/article/<%= article.id %>"><%= article.title %></a></td>
                                <td><%= new Date(article.publicationDate).toLocaleString() %></td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="2">No published articles.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
            <div class="button-container">
                <button onclick="location.href='/contents'">Back to Contents Page</button>
            </div>
        </section>
        <footer>
            <p>&copy; 2024 Healro. All rights reserved.</p>
        </footer>
    </div>
</body>
</html>

<!--sidebar toggle--> 
<script>
    document.getElementById("hamburger").addEventListener("click", function() {
        var sidebar = document.getElementById("sidebar");
        var mainContent = document.querySelector(".main-content");

        sidebar.classList.toggle("hidden");
        mainContent.classList.toggle("shifted");

        if (sidebar.classList.contains("hidden")) {
            this.innerHTML = '&#9776;';  // Change to hamburger icon when sidebar is hidden
        } else {
            this.innerHTML = '&times;';  // Change to 'X' icon when sidebar is visible
        }
    });
</script>